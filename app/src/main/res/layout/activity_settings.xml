<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Settings"
            android:textSize="18sp"
            android:textColor="@color/accent_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/scheduleEnabledSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Schedule"
            android:textColor="@color/white"
            android:minHeight="48dp"
            app:thumbTint="@color/accent_primary"
            app:trackTint="@color/accent_secondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <TimePicker
            android:id="@+id/startTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:theme="@style/TimePickerTheme"
            android:enabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <TimePicker
            android:id="@+id/endTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:theme="@style/TimePickerTheme"
            android:enabled="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Storage Settings"
            android:textSize="18sp"
            android:textColor="@color/accent_primary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/storeHistoricalDataSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Historical Trip Data"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:checked="true"
            app:thumbTint="@color/accent_primary"
            app:trackTint="@color/accent_secondary" />

        <Button
            android:id="@+id/clearDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Stored Data"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/saveSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:layout_marginTop="32dp" />

    </LinearLayout>
</ScrollView> 